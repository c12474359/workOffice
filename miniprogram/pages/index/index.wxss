.status{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 30px;
  width: 100%;
  padding-left: 10px;
}
.main{
  display: flex;
  flex-direction: row;
  height: calc(100% - 30px);
  width: 100%;
}
.tool{
  display: flex;
  padding-top: 30px;
  flex-direction: column;
  height: 100%;
}
.date-item{
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #f2f2f222;
}
.taskContainer{
  flex:1;
  display: flex;
  flex-direction: column;
  height: 100%;
  width:calc(100% - 60px);
  background-color:#26262d;
  background-size: 20px;
  background-image:linear-gradient(90deg,#cccccc44, 1px,transparent 0);
}
.timeline{
  display: flex;
  height: 30px;
  width: 100%;
  font-size: 10px;
}
.hour-cell{
  color: #f2f2f2;
  display: flex;
  height: 15px;
  border-right: 1px solid #f2f2f2;
}
.tasks{
  flex:1;
  width: 100%;
  position: relative;
}
.task-item{
  box-sizing: border-box;
  display: flex;
  position: absolute;
  justify-content: center;
  align-items: center;
}
.action{
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  padding: 0 5px;
  border-radius: 5px;
  font-size: 10px;
  width: 40px;
  justify-content: center;
  transition: 1s ease;
}

